@model WebBook.Models.NguoiDung
@{
    ViewBag.Title = "QuanLyNguoiDung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-lg-12">
            @using (Html.BeginForm("CapNhatThongTinNguoiDung", "HomePage", FormMethod.Post, new { style = "border:3px dotted grey; padding: 10px;" }))
            {
                <h1 style="text-align:center">THÔNG TIN CÁ NHÂN</h1>
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.TaiKhoan)
                @Html.HiddenFor(model => model.MatKhau)
                @Html.HiddenFor(model => model.Avatar)
                <div class="form-group">
                    <label for="usr">Tên của bạn:</label>
                    @Html.TextBoxFor(model => model.Ten, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="usr">Số điện thoại của bạn:</label>
                    @Html.TextBoxFor(model => model.SDT, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="usr">Địa chỉ:</label>
                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="usr">Email:</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-lg btn-secondary" value="LƯU THAY ĐỔI" />
                </div>
            }
        </div>
    </div>
</div>
