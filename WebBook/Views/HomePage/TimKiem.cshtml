@model IEnumerable<WebBook.Models.Sach>

@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h2 style="border-bottom: 3px dashed green; color:green; margin-bottom: 20px;">KẾT QUẢ TÌM KIẾM</h2>
    @if(Model.Count() == 0)
    {
        <p>Không có sản phẩm bạn đang tìm kiếm.</p>
    }
    else
    {
        foreach (var sach in Model)
        {
            <div class="row">
                @{
                    string path_img = "~/Assets/img/" + sach.Anhbia;
                }
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-4">
                            <a href="#">
                                <img src="@Url.Content(path_img)" alt="Card image cap" style="height:100%;width:100%;">
                            </a>
                        </div>
                        <div class="col-lg-8">
                            <div>
                                <a href="#"><h4 class="card-title">@sach.TenSach</h4></a>
                                <p class="card-text">This is my book</p>
                                <p class="card-text"><strong>@sach.Gia VND</strong></p>
                                <a href="@Url.Action("ThemSanPham", "HomePage", new { id = sach.ID, returnurl = Request.Url.AbsoluteUri})" class="btn btn-danger">Thêm giỏ hàng</a>
                                <a href="#" class="btn btn-danger">Mua ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                    }
                    }
</div>