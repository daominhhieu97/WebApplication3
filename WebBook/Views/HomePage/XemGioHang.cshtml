@model WebBook.Models.GioHang
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (Model.LST_SACHS.Count() == 0)
    {
        <h2 style="border-bottom: 3px dashed green; color:green; margin-bottom: 20px;">GIỎ HÀNG CỦA BẠN</h2>
        <p>Không có sản phẩm nào trong giỏ hàng của bạn!</p>
        <p>Quay lại Trang chủ đặt hàng ngày</p>
        <div class="mx-auto">
            <a href="@Url.Action("Index","HomePage")" class="btn btn-success">Quay lại Trang Chủ</a>
        </div>
    }
    else
    {
        <h2 style="border-bottom: 3px dashed green; color:green; margin-bottom: 20px;">GIỎ HÀNG CỦA BẠN CÓ: @Model.LST_SACHS.Count() sản phẩm</h2>
        <div class="table-responsive">
            <table class="table">
                @foreach (var sach in Model.LST_SACHS)
                {

                    string path_img = "~/Assets/img/" + sach.Anhbia;
                    double thanhtien = (double)sach.Gia;
                    <thead>
                        <tr>
                            <th>Ảnh bìa</th>
                            <th>Tên sách</th>
                            <th>Gía sách</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <img src="@Url.Content(path_img)" alt="Card image cap" style="height:200px;width:200px;">
                            </td>
                            <td>@sach.TenSach</td>
                            <td>@sach.Gia</td>
                            <td>1</td>
                            <td>@thanhtien</td>
                            <td>
                                <a href="@Url.Action("XoaSanPham","HomePage",new { id = sach.ID })">
                                    <i class="fa fa-window-close" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                }
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><h2>TỔNG TIỀN</h2></td>
                        <td><p style="font-weight:bolder; font-size:30px;"><b>@Model.totalprice</b></p></td>
                    </tr>
                    <tr>
                        <td><a class="btn btn-success  btn-lg" href="@Url.Action("Index","HomePage")"><strong>TIẾP TỤC MUA HÀNG</strong></a></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><a class="btn btn-success  btn-lg" href="@Url.Action("DatHang","HomePage")"><strong>ĐẶT HÀNG NGAY</strong></a></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div>
        </div>
    }
</div>
