@model WebBook.Models.NguoiDung
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

    <link rel="stylesheet" href="~/Assets/Login/css/style.css">

</head>
<body>
    <div class="form">

        <ul class="tab-group">
            <li class="tab active"><a href="#signup">ĐĂNG KÝ</a></li>
            <li class="tab"><a href="#login">ĐĂNG NHẬP</a></li>
        </ul>

        <div class="tab-content">
            <div id="signup">
                <h1>ĐĂNG KÝ MIỄN PHÍ</h1>
                <form action="/" method="post">
                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                                Họ...<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" />
                        </div>

                        <div class="field-wrap">
                            <label>
                                Tên...<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" />
                        </div>
                    </div>
                    <div class="field-wrap">
                        <label>
                            Email của bạn...<span class="req">*</span>
                        </label>
                        <input type="email" required autocomplete="off" />
                    </div>

                    <div class="field-wrap">
                        <label>
                            Mật khẩu của bạn...<span class="req">*</span>
                        </label>
                        <input type="password" required autocomplete="off" />
                    </div>

                    <button type="submit" class="button button-block" />BẮT ĐẦU</button>

                </form>
            </div>

            <div id="login">
                <h1>CHÀO MỪNG TRỞ LẠI!</h1>
                @using (Html.BeginForm("CheckAuthen", "LoginPage", FormMethod.Post))
                {
                    <div class="field-wrap">
                        <label>
                            TÀI KHOẢN<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(Model => Model.TaiKhoan)
                    </div>

                    <div class="field-wrap">
                        <label>
                            MẬT KHẨU<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(Model => Model.MatKhau, new { type = "password" })
                    </div>

                        <p class="forgot"><a href="#">Forgot Password?</a></p>

                        <button class="button button-block">ĐĂNG NHẬP</button>
                }
            </div>

        </div><!-- tab-content -->

    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="~/Assets/Login/js/index.js"></script>


</body>
</html>
